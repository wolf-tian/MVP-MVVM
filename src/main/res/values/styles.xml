<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="login_third_way_titie_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/px32sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">@dimen/px28dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="login_third_way_main_img">
        <item name="android:layout_width">@dimen/px32dp</item>
        <item name="android:layout_height">@dimen/px32dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/px30dp</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
    </style>

    <style name="login_third_way_main_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/px30dp</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">@dimen/px28sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="login_third_part_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px2dp</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
        <item name="android:layout_marginRight">@dimen/px30dp</item>
        <item name="android:background">@color/login_third_divider_gray</item>
    </style>

    <style name="login_third_yzm_btn">
        <item name="android:layout_width">@dimen/px160dp</item>
        <item name="android:layout_height">@dimen/px56dp</item>
        <item name="android:textSize">@dimen/px28sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/px30dp</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/px30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_third_login_btn_bg">
        <item name="android:layout_width">@dimen/px630dp</item>
        <item name="android:layout_height">@dimen/px98dp</item>
        <item name="android:textSize">@dimen/px32sp</item>
        <item name="android:background">@drawable/login_third_yzm_btn_radius</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/px60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="login_third_yzm_wait_btn">
        <item name="android:layout_width">@dimen/px160dp</item>
        <item name="android:layout_height">@dimen/px56dp</item>
        <item name="android:textSize">@dimen/px28sp</item>
        <item name="android:background">@drawable/login_third_yzm_btn_radius</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/px30dp</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/px30dp</item>
    </style>

    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_choose_area_select_bg</item>
    </style>

</resources>
